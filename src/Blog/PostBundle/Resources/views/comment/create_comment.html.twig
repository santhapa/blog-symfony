<!-- Comments Form -->
<div class="well">
	<h4>Leave a Comment:</h4>
	<form role="form" action=" {{ path('createCommentPage') }} " method="POST" >
		<div class="form-group">
			<textarea class="form-control span10" rows="5" name="commentText" required></textarea>
			<input type="hidden" name="postId" value="{{ id }}" >
		</div>
		<button type="submit" class="btn btn-info" name="addComment" >Submit</button>
	</form>
</div>

<hr>