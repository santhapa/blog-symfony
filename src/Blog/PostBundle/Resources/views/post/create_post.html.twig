{% extends "BlogAdminBundle::Admin/admin_base.html.twig" %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body_content %}

	<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
			<h1>Post<small>(Manage blog posts)</small></h1>
			
			{{ wo_render_breadcrumbs() }}
        </section>

        <!-- Main content -->
        <section class="content">
			<div class="row">
				<div class="col-xs-12">
					<div class="box">
						<div class="box-header">
							<h3 class="box-title">
								<strong>Create New Post</strong>
							</h3>
						</div><!-- /.box-header -->
						<div class="box-body">
							{% if errors %}
								<ul class="alert alert-error form-error">
									{% for error in errors %}
						    			<li><span> - {{ error.message }}</span></li>
									{% endfor %}
								</ul>
					    	{% endif %}

							<form class="form-horizontal" method="POST" action="">
								<div class="form-group">
									<label class="col-sm-2 control-label" for="inputTitle">Title:</label>
									<div class="col-sm-8">
										<input type="text" class="form-control" name="title" id="inputTitle" placeholder="Title for the post" required>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-2 control-label" for="inputContent">Content:</label>
									<div class="col-sm-8">
										<textarea class='ckeditor' rows="5" class="form-control" cols="10" name="content" id="inputContent"></textarea>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-2 control-label" for="inputStatus">Active:</label>
									<div class="col-sm-8">
										<select class="form-control" id="inputStatus" name="active" required>
											<option value="1" selected>Yes</option>
											<option value="0">No</option>
										</select>
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-8">
										<button type="submit" name="createPost" class="btn">Create</button>
									</div>
								</div>
							</form>
						</div><!-- /.box-body -->
					</div><!-- /.box -->
				</div><!-- /.col -->
			</div><!-- /.row -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{% endblock body_content %}

{% block js %}
    <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>
{% endblock js %}