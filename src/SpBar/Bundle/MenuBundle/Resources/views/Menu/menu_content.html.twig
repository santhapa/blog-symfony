<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            <strong>Frontend Menu </strong>
        </h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <form action=
        "http://demo.gawibowo.com/easymenu/emm/index.php?act=menu.save_position" id="form-menu" method="post" name="form-menu">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                <ul id="easymm">
                {% for menu in menus if menu.parent == null %}
                    <li class="sortable" id="menu-{{ menu.id }}">
                        <div class="panel panel-default">
                            <div class="panel-heading ns-title" role="tab" id="{{menu.id}}-heading">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4 class="panel-title" id="{{menu.id}}-title">
                                            <span>{{ menu.name }}</span>
                                        </h4>
                                    </div>
                                    <div class="col-md-4">
                                        <span class="pull-right">
                                            ({{ menu.menuType }}) &emsp;
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#{{menu.id}}-list-group" aria-expanded="false" aria-controls="{{menu.id}}-list-group">
                                                <i class="fa fa-caret-down"></i>
                                            </a>
                                        </span>                                    
                                    </div>
                                </div>
                            </div>
                            <div id="{{menu.id}}-list-group" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{menu.id}}-heading" aria-expanded="false">
                                Home
                            </div>
                        </div>
                    </li>
                    {% if menu.child %}
                    <ul>
                        {% for child in menu.child %}
                            <li class="sortable" id="menu-{{ child.id }}">
                                <div class="panel panel-default">
                                    <div class="panel-heading ns-title" role="tab" id="{{child.id}}-heading">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h4 class="panel-title" id="{{child.id}}-title">
                                                    <span>{{ child.name }}</span>
                                                </h4>
                                            </div>
                                            <div class="col-md-4">
                                                <span class="pull-right">
                                                    ({{ child.menuType }}) &emsp;
                                                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#{{child.id}}-list-group" aria-expanded="false" aria-controls="{{child.id}}-list-group">
                                                        <i class="fa fa-caret-down"></i>
                                                    </a>
                                                </span>                                    
                                            </div>
                                        </div>
                                    </div>
                                    <div id="{{child.id}}-list-group" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{child.id}}-heading" aria-expanded="false">
                                        Home
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                        </ul>
                    {% endif %}
                {% endfor %}
                </ul>
            </div>

            <div id="ns-footer">
                <button class="button green small" id="btn-save-menu"
                type="submit">Save Menu</button>
            </div>
        </form>
    </div>              
</div><!-- /.box -->