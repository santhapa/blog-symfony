{% extends('SpBarBlogBundle::Backend/back_base.html.twig') %}

{% block body_container %}
    <!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">
							<strong>List of Active Users</strong>
						</h3>
					</div><!-- /.box-header -->
					{% include "SpBarUserBundle:Backend/User:list_content.html.twig" with {'users': activeUsers} %}					
				</div><!-- /.box -->
			</div><!-- /.col -->
		</div><!-- /.row -->
	</section><!-- /.content -->

	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">
							<strong>Create new User</strong>
						</h3>
					</div><!-- /.box-header -->
					{% include "SpBarUserBundle:Backend/Registration:register_content.html.twig" %}					
				</div><!-- /.box -->
			</div><!-- /.col -->
		</div><!-- /.row -->
	</section><!-- /.content -->

	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">
							<strong>List of Disabled Users</strong>
						</h3>
					</div><!-- /.box-header -->
					{% include "SpBarUserBundle:Backend/User:list_content.html.twig" with {'users': inactiveUsers, 'inactive':true} %}
				</div><!-- /.box -->
			</div><!-- /.col -->
		</div><!-- /.row -->
	</section><!-- /.content -->
{% endblock body_container %}
