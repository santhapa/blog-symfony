<div class="box-body">
	<form class="form-horizontal" method="POST" action="{{ path('sp_user_group_new') }}">

		<div class="form-group">
			<label class="col-sm-2 control-label">{{ form_label(form.name) }}:</label>
			<div class="col-sm-8">
				{{ form_widget(form.name, {"attr" : {"placeholder" : "Group Name", "class": "form-control"}}) }}
			</div>
		</div>

		<div class="form-group">
	        <div class="col-sm-offset-4 col-sm-8">
	            <button type="submit" class="btn btn-info" value="Create">Create</button>
	        </div>
	    </div>

	</form>
</div>