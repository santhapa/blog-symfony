{% extends "BlogAdminBundle::Admin/admin_base.html.twig" %}

{% block body_content %}

	<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
			<h1>User<small>(Manage blog users)</small></h1>
			<ol class="breadcrumb">
				<li><a href="{{ path('adminIndexPage') }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
				<li> <a href="{{ path('userIndexPage') }}">User</a></li>
				<li class="active">Group Assignment</li>
			</ol>
        </section>

        <!-- Main content -->
        <section class="content">
			<div class="row">
				<div class="col-xs-12">
					<div class="box">
						<div class="box-header">
							<h3 class="box-title">
								<strong>Assign User to Group</strong>
							</h3>
						</div><!-- /.box-header -->
						<div class="box-body">
							<form action="" method="post" class="form-horizontal">
								<div class="col-sm-offset-4">
									<span class="alert alert-info" role="alert">Assign multiple groups with CTRL+Select</span>
								</div><br>
								<div class="form-group">
						   			<label class="col-sm-2 control-label">Select Group:</label>
						   			<div class="col-sm-8">
										<select multiple class="form-control" name="groups[]">
											{% for group in groups %}
												<option  
													{% if user.hasGroup(group.getName()) %}
														selected="selected"
													{% endif %}
													value="{{ group.getId() }}" 
												>
													{{ group.getName() }}
												</option>
											{% endfor %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-offset-2 col-sm-10">
										<button type="submit" class="btn btn-default" name="assignGroup">Assign</button>
									</div>
								</div>
							</form>
						</div><!-- /.box-body -->
					</div><!-- /.box -->
				</div><!-- /.col -->
			</div><!-- /.row -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{% endblock body_content %}

