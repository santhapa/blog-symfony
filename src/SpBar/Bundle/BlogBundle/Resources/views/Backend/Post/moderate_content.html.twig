{% set comments = post.comments %}
<div class="box-body">
    <!-- DIRECT CHAT PRIMARY -->
    <div class="box box-primary direct-chat direct-chat-primary">

        <div class="box-body">
            <!-- Conversations are loaded here -->
            <div class="direct-chat-messages">
                <!-- Message. Default to the left -->
                {% for comment in comments if comment.parent == null %}
                    <div class="direct-chat-msg">
                        <div class="direct-chat-info clearfix">
                            <span class="direct-chat-name pull-left">{{ app.user == comment.user ? "You" : comment.user.getName()|trim ? : comment.user.getUsername() }}</span>
                            <span class="direct-chat-timestamp pull-right">{{ comment.commentAt|date('d M, Y | h:i A')  }}|Edit|<a href="{{ path('sp_blog_comment_delete', {'id': comment.id}) }}">Delete</a>|Reply</span>
                        </div><!-- /.direct-chat-info -->
                        <img class="direct-chat-img" src="{{ asset(userImage(comment.user)) }}" alt="user image"><!-- /.direct-chat-img -->
                        <div class="direct-chat-text">
                            {{ comment.content }}
                        </div><!-- /.direct-chat-text -->
                    </div><!-- /.direct-chat-msg -->
                    {% for child in comment.children %}
                        <!-- Message to the right -->
                        <div class="direct-chat-msg right">
                            <div class="direct-chat-info clearfix">
                                <span class="direct-chat-name pull-right">{{ child.user.getName()|trim ? : child.user.getUsername() }}</span>
                                <span class="direct-chat-timestamp pull-left">{{ child.commentAt|date('d M, Y | h:i A')  }}|Edit|<a href="{{ path('sp_blog_comment_delete', {'id': child.id}) }}">Delete</a>|Reply</span>
                            </div><!-- /.direct-chat-info -->
                            <img class="direct-chat-img" src="{{ asset(userImage(child.user)) }}" alt="user image"><!-- /.direct-chat-img -->
                            <div class="direct-chat-text">
                                {{ child.content }}
                            </div><!-- /.direct-chat-text -->
                        </div><!-- /.direct-chat-msg -->
                    {% endfor %}
                {% endfor %}
                {% if comments|length <= 0 %} <span>No comments yet!</span> {% endif %}
            </div><!--/.direct-chat-messages-->
        </div><!-- /.box-body -->
        <div class="box-footer">
            {% include 'SpBarBlogBundle:Backend/Comment:reply.html.twig' %}
        </div><!-- /.box-footer-->
    </div><!--/.direct-chat -->
</div>