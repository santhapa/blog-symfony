{% form_theme form with ['bootstrap_3_horizontal_layout.html.twig','form_errors.html.twig'] %}

<div class="box-body">
    <form class="form-horizontal" method="POST" action="{{ path('sp_blog_post_edit', {'slug': slug}) }}">
        <div class="row">
            <div class="col-xs-12 col-sm-9">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <strong>Post Content</strong>
                        </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}  
                        <br>
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }} 
                        <br>
                        {% if app.user and is_granted('ROLE_BLOG_ADMIN') %}
                        	{{ form_widget(form.author) }}
                        	{{ form_errors(form.author) }}
                        {% endif %}
                    </div>              
                </div><!-- /.box -->
            </div><!-- /.col -->

            <div class="col-xs-12 col-sm-3">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <strong>Featured Image</strong>
                        </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        {{ form_widget(form.featuredImage) }}
                        {{ form_errors(form.featuredImage) }}
                    </div>              
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <strong>Post Type</strong>
                        </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        {{ form_widget(form.postType) }}
                        {{ form_errors(form.postType) }}  
                    </div>              
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <strong>Category</strong>
                        </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        {{ form_widget(form.category) }}
                        {{ form_errors(form.category) }}  
                    </div>              
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            <strong>Confirm</strong>
                        </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        {{ form_widget(form.status) }}
                        {{ form_errors(form.status) }}  
                        <br>
                        <div class="form-group">
					        <div class="col-xs-8">
					            <button type="submit" class="btn btn-info" value="Update">Update</button>
					        </div>
					    </div>
                    </div>              
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </form>
</div>

{% block js %}
    <script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>

{% endblock js %}