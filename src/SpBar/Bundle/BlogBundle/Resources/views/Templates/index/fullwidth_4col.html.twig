<div class="container">
	<div id="content">
		<div class="row">
		{% for post in posts if post.status == constant('SpBar\\Bundle\\BlogBundle\\Model\\PostManager::POST_STATUS_PUBLISH') and post.postType.slug == 'general_post' %}			
			<div class="col-sm-3">
				<div class="beta-blog beta-blog-a beta-blog-4cols">
					<div class="beta-blog-content">
						{% include 'SpBarBlogBundle:Frontend/Divs:post_content.html.twig' with {'post': post, 'length': '200', 'col': '4'} %}
					</div>
				</div> <!-- .beta-blog item -->
			</div>
			{% if loop.index is divisible by(4) or loop.index == posts|length %}</div><hr class="mb50">
				{% if loop.index != posts|length %}
					<div class="row" >
				{% endif %}
			{% endif %}
		{% endfor %}
		{{ knp_pagination_render(posts, 'beta_pagination.html.twig') }}
	</div> <!-- #content -->
</div> <!-- .container -->
