<div class="container">
	<div id="content">
		{% for post in posts if post.status == constant('SpBar\\Bundle\\BlogBundle\\Model\\PostManager::POST_STATUS_PUBLISH') %}
			{% if loop.index is odd %} <div class="row"> {% endif %}
				<div class="col-sm-6">
					<div class="beta-blog beta-blog-a beta-blog-2cols">
						{% include 'SpBarBlogBundle:Frontend/Divs:post_content.html.twig' with {'post': post, 'length': '200', 'col': '2'} %}
					</div> <!-- .beta-blog item -->
				</div>
			{% if loop.index is even or loop.index == posts|length %} </div><hr class="mb50"> {% endif %}
		{% endfor %}

		{{ knp_pagination_render(posts, 'beta_pagination.html.twig') }}
	</div> <!-- #content -->
</div> <!-- .container -->
