<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>{% block title %} Home {% endblock title %}:Blog</title>

    <link href=" {{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    {% block css %}
    {% endblock css %}
</head>

<body>
    <div class="navbar-wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href=" {{ path('publicHomepage') }} ">Blog</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        
                        {% if app.user and is_granted('ROLE_AUTHOR') %}
                            <li><a href="{{ path('createPostPage') }}">New Post</a></li>
                            <li><a href="{{ path('postDashPage') }}">Dashboard</a></li>
                        {% endif %}

                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('adminIndexPage') }}">Dashboard</a></li>
                        {% endif %}
                        
                        {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a href="{{ path('profilePage') }}">Profile</a></li>
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        {% else %}                            
                            <li><a href="{{ path('loginPage') }}">Login</a></li>
                        {% endif %}
                    </ul>
                    <form class="navbar-form navbar-right">
                        <input type="text" class="form-control" placeholder="Search...">
                    </form>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        
        {% block body %}
        {% endblock body %}
        
    </div>



    {% block js %}
    {% endblock js %}

    <script src=" {{ asset('bootstrap/js/jquery-1.11.1.min.js') }} "></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    
</body>
</html>

