{% if pageCount > 1 %}
<div class="beta-pagination text-center">
    {% if previous is defined %}
        <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="fa fa-chevron-left"></i></a>
    {% else %}
        <!-- <a class="disabled"><i class="fa fa-chevron-left"></i></a> -->
    {% endif %}

    {% if startPage > 1 %}
        <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
        {% if startPage == 3 %}
            <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
        {% elseif startPage != 2 %}
            <span>&hellip;</span>
        {% endif %}
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
        {% else %}
            {# <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="is-active">{{ page }}</a> #}
            <a class="is-active">{{ page }}</a>
        {% endif %}

    {% endfor %}

    {% if pageCount > endPage %}
        {% if pageCount > (endPage + 1) %}
            {% if pageCount > (endPage + 2) %}
                <span>&hellip;</span>
            {% else %}
                <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
            {% endif %}
        {% endif %}
        <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
    {% endif %}

    {% if next is defined %}
        <a href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="fa fa-chevron-right"></i></a>
    {% else %}
        <!-- <a class="disabled"><i class="fa fa-chevron-right"></i></a> -->
    {% endif %}
    
</div>
{% endif %}








            